@inherits UmbracoViewPage<ePorownaj.Models.FormCarModel>
<div class="form">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form class="form-horizontal" method="post">
                    <div class="row">
                        <div class="col-md-12">
                            <h3>Dane dotyczace pojazdu</h3>
                        </div>
                        <div class="col-md-4">
                            <p style="line-height:20px;font-weight:normal;font-family:Lato, sans-serif;">Wprowadź dane przedmiotu ubezpieczenia.</p>
                        </div>
                        <div class="col-md-8">
                            @using (Html.BeginUmbracoForm("SubmitForm", "FormCarSurface", FormMethod.Post))
                            {

                                @Html.AntiForgeryToken()
                                <div class="beautiful bs-callout bs-callout-info">
                                    <h4>Informacja</h4>
                                    <p>
                                        WAŻNE! Dane oznakowane przy pomocy gwiazdki (*) są konieczne do wykonania kalkulacji
                                    </p>

                                    @Html.ValidationSummary()

                                </div>
                                <hr />
                                <h3>Dane osobowe</h3>
                                <hr />
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.FirstName)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.TextBoxFor(m => m.FirstName, new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.LastName)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.TextBoxFor(m => m.LastName, new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.DOB)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.TextBoxFor(m => m.DOB, new Dictionary<string, object> { { "class", "form-control" }, { "type", "date" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.EmailAddress)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.TextBoxFor(m => m.EmailAddress, new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.PhoneNumber)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.TextBoxFor(m => m.PhoneNumber, new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.PostCode)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.TextBoxFor(m => m.PostCode, new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.Status)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.DropDownListFor(m => m.Status, Model.StatusTypes, "Wybierz status cywilny", new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.PESEL)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.TextBoxFor(m => m.PESEL, new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.CoOwner)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.DropDownListFor(m => m.CoOwner, Model.CoOwnerTypes, "Wybierz...", new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.DriversLicense)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.TextBoxFor(m => m.DriversLicense, new Dictionary<string, object> { { "class", "form-control" }, { "type", "date" } })
                                    </div>
                                </div>
                                <hr />
                                <h3>Dane dotyczące pojazdu</h3>
                                <hr />
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.Brand)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.DropDownListFor(m => m.Brand, Model.Brands, "Wybierz Markę", new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.Make)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.TextBoxFor(m => m.Make, new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.ProductionYear)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.TextBoxFor(m => m.ProductionYear, new Dictionary<string, object> { { "class", "form-control" }, { "type", "date" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.Petrol)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.DropDownListFor(m => m.Petrol, Model.PetrolTypes, "Wybierz rodzaj paliwa", new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.Capacity)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.TextBoxFor(m => m.Capacity, new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.Power)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.TextBoxFor(m => m.Power, new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.Bodywork)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.DropDownListFor(m => m.Bodywork, Model.BodyWorkTypes, "Wybierz typ nadwozia", new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.GearBox)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.DropDownListFor(m => m.GearBox, Model.GearBoxTypes, "Wybierz rodzaj skrzyni biegów", new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.Milage)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.TextBoxFor(m => m.Milage, new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.Origin)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.DropDownListFor(m => m.Origin, Model.OriginTypes, "Wybierz pochodzenie pojazdu", new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.Parking)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.DropDownListFor(m => m.Parking, Model.ParkingTypes, "Wybierz miejsce parkowania", new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.Usage)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.DropDownListFor(m => m.Usage, Model.UsageTypes, "Wybierz rodzaj użytkowania", new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.Ownership)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.TextBoxFor(m => m.Ownership, new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.Registration)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.TextBoxFor(m => m.Registration, new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.InsuranceEnd)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.TextBoxFor(m => m.InsuranceEnd, new Dictionary<string, object> { { "class", "form-control" }, { "type", "date" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.InsuranceCompany)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.TextBoxFor(m => m.InsuranceCompany, new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <hr />
                                <h3>Niezbędna zgoda</h3>
                                <hr />
                                <div class="form-group">
                                    <div class="col-md-1 col-sm-8">
                                        @Html.CheckBoxFor(m => m.Agreement, new Dictionary<string, object> { { "class", "control-label" } })
                                    </div>
                                    <div class="col-md-11 col-sm-4">
                                        <label class="control-label">
                                            Wyrażam zgodę na przetwarzanie swoich danych osobowych w celach marketingowych przez ePorównaj Sp. z o.o. zgodnie z ustawą z dnia 29 sierpnia 1997 r. o ochronie danych osobowych (tekst jednolity: Dz.U. 2002 r. Nr
                                            101 poz. 926 z późn. zm.) oraz na otrzymywanie od ePorównaj Sp. z o.o. informacji handlowychdrogą elektroniczną zgodnie z ustawą z dnia 18.07.2002 r. (Dz.U. nr 144, poz.1204 z późn. zm.)o świadczeniu usług drogą elektroniczną.
                                        </label>
                                    </div>
                                </div>
                                <hr />
                                <div class="form-group">
                                    <div class="col-md-1 col-sm-8">
                                        <button>Wyślij</button>
                                    </div>
                                </div>
                                <br />
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
