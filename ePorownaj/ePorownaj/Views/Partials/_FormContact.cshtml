@inherits UmbracoViewPage<ePorownaj.Models.FormContactModel>
<div class="form">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form class="form-horizontal" method="post">
                    <div class="row">
                        <div class="col-md-12">
                            <h3>Formularz kontaktowy</h3>
                        </div>
                        <div class="col-md-4">
                            <p style="line-height:20px;font-weight:normal;font-family:Lato, sans-serif;">W czym możemy Ci pomóc?</p>
                        </div>
                        <div class="col-md-8">
                            @using (Html.BeginUmbracoForm("SubmitForm", "FormContactSurface", FormMethod.Post))
                            {

                                @Html.AntiForgeryToken()
                                <div class="beautiful bs-callout bs-callout-info">
                                    <h4>Informacja</h4>
                                    <p>
                                        WAŻNE! Dane oznakowane przy pomocy gwiazdki (*) są konieczne do wysłania wiadomości.
                                    </p>

                                    @Html.ValidationSummary()

                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.FirstName)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.TextBoxFor(m => m.FirstName, new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.LastName)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.TextBoxFor(m => m.LastName, new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.EmailAddress)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.TextBoxFor(m => m.EmailAddress, new Dictionary<string, object> { { "class", "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-4">
                                        @Html.LabelFor(m => m.Message)
                                    </div>
                                    <div class="col-md-7 col-sm-8">
                                        @Html.TextAreaFor(m => m.Message, new Dictionary<string, object> { { "class", "form-control" } , { "style", "height:200px" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-1 col-sm-8">
                                        <button>Wyślij</button>
                                    </div>
                                </div>
                                <br />
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


